{
  "name": "react-init",
  "version": "0.0.0",
  "description": "first play with react and isomorphism",
  "main": "index.js",
  "browserify": {
    "transform": [
      [
        "reactify",
        {
          "es6": false
        }
      ]
    ]
  },
  "dependencies": {
    "body-parser": "^1.12.2",
    "browserify": "^9.0.3",
    "express": "^4.12.3",
    "jsx": "^0.9.89",
    "morgan": "^1.5.2",
    "node-jsx": "^0.12.4",
    "nodemon": "^1.3.7",
    "parallelshell": "^1.1.1",
    "react": "^0.13.1",
    "react-router": "^0.13.1",
    "reactify": "^1.1.0",
    "serve-static": "^1.9.2",
    "watchify": "^2.6.0"
  },
  "devDependencies": {},
  "scripts": {
    "build-js": "browserify -t reactify components/Routes.js > public/js/bundle.js",
    "build-sass": "sass sass/style.scss > public/css/style.css",
    "build": "npm run build-js && npm run build-sass",
    "watch-js": "watchify -t reactify components/Routes.js -d components/Routes.js -o public/js/bundle.js -v",
    "watch-sass": "sass --watch sass:public/css",
    "watch": "parallelshell 'npm run watch-js' 'npm run watch-sass'",
    "test": "npm run test",
    "start": "nodemon index.js"
  },
  "author": "Jaz Lalli",
  "license": "MIT"
}
